<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <!-- Greeting for home  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/greeting"
            android:layout_width="347dp"
            android:layout_height="99dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/ubuntu"
            android:text="Good morning, Terry! Our focus today is..."
            android:textColor="#4E4A64"
            android:textSize="35dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="347dp"
            android:layout_height="170dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="0dp"
            android:background="@color/purple"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="272dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Macbeth Reading Act 1"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Term Paper 1 for English A"
                    android:textColor="@color/white"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:text="You've maintained a streak for 3 days for this assignment! Keep going! :)"
                    android:textColor="@color/white"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Due in 2 days"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:id="@+id/terryMan"
                android:layout_width="72dp"
                android:layout_height="186dp"
                android:src="@drawable/ic__terryman" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/customborder"
            android:orientation="horizontal">

            <!-- Workbook ch 1 -->

            <TextView
                android:id="@+id/chapter1"
                android:layout_width="197dp"
                android:layout_height="20dp"
                android:fontFamily="@font/ubuntu"
                android:text="Workbook Chapter 1"
                android:textColor="#4E4A64"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/advmaths1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Advanced Maths"
                android:textColor="#4E4A64"
                android:textSize="14dp"
                android:translationX="-197dp"
                android:translationY="14dp" />

            <TextView
                android:id="@+id/duetime1"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:text="Due in 11 hours"
                android:textColor="#6246EA"
                android:textSize="16dp"
                android:textStyle="bold"
                android:translationX="-125dp"
                android:translationY="30dp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/customborder"
            android:orientation="horizontal">

            <!-- Research -->
            <TextView
                android:id="@+id/preResearch"
                android:layout_width="197dp"
                android:layout_height="20dp"
                android:fontFamily="@font/ubuntu"
                android:text="Preliminary Research"
                android:textColor="#4E4A64"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/advmaths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Final Paper for Art History"
                android:textColor="#4E4A64"
                android:textSize="14dp"
                android:translationX="-197dp"
                android:translationY="14dp" />

            <TextView
                android:id="@+id/duetime"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:text="Due in 11 hours"
                android:translationX="-125dp"
                android:translationY="30dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button"
                android:layout_width="279dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:text="Button" />

        </LinearLayout>

    </LinearLayout>


    <!-- Button holder  -->

    <!-- Notif 2-->

    <!-- Notif 3-->


</androidx.constraintlayout.widget.ConstraintLayout>