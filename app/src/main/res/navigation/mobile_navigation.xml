<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.productivitybot.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.productivitybot.ui.dashboard.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_peers"
        android:name="com.example.productivitybot.ui.notifications.PeersFragment"
        android:label="@string/title_peers"
        tools:layout="@layout/fragment_peers" />

    <fragment
        android:id="@+id/navigation_progress"
        android:name="com.example.productivitybot.ProgressFragment"
        android:label="@string/title_progress"
        tools:layout="@layout/fragment_peers" />

</navigation>